<h1>Blogs</h1>
<%= search_form_for @q do |f| %>
  <%= f.label :title_or_content, 'キーワードで検索' %>
  <%= f.search_field :title_or_content_cont, class: "form-control", :placeholder => "あいまいなワードで検索"%> 
  <%= f.submit '検索' %>
<% end %>

<% @blogs.each do |blog| %>
    <div class="col-md-6">
      <%= link_to blog do %>
        <div class="blog__area index">
          <h1><%= blog.title.truncate(22) %></h1>
           <p class="content"><%= blog.content.truncate(200) %></p>

          <div class="user__area">
            <p><%= image_tag blog.user.profile.icon.url %></p>
            <p><%= blog.user.name %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
