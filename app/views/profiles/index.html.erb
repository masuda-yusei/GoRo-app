<p id="notice"><%= notice %></p>

<h1>Profiles</h1>
<%= search_form_for @q do |f| %>
  <%= f.label :gender, '性別で検索' %>
  <%= f.search_field :gender_eq %>
<br>
  <%= f.label :residence, '居住地で検索' %>
  <%= f.search_field :residence_eq %>
  <%= f.submit '検索' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Icon</th>
      <th>Gender</th>
      <th>Birthday</th>
      <th>residence</th>
      <th>Introduction</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.icon %></td>
        <td><%= profile.gender %></td>
        <td><%= profile.birthday %></td>
        <td><%= profile.residence %></td>
        <td><%= profile.introduction %></td>
        <td><%= profile.user.name %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>