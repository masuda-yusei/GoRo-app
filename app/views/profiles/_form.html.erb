<%= form_with(model: profile, local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "件") %>のエラーが見つかりました</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="field">
    <%= form.label :icon %>
    <%= image_tag profile.icon.url, id: "img_prev" %>
    <%= form.hidden_field :icon_cache %>
    <%= form.file_field :icon, id: 'user_img' %>

  <div class="field">
    <%= form.label :gender %>
    <div class="gender_area clearfix">
    <%= form.collection_radio_buttons :gender, Profile.genders,:first, :first %></div>
  </div>

  <div class="field">
    <%= form.label :birthday %>
    <div class="birthday_area clearfix">
      <%= form.date_select :birthday, { 
                  start_year:Time.now.year-100,
                  end_year:Time.now.year,
                  prompt:"選択してください",
        } %>
    </div>
  </div>

  <div class="field">
    <%= form.label :residence %>
    <%= collection_select :residence_id, @residence, :code, :name, include_blank: "エリアを選択してください", selected: params.dig(:place)  %>
    <div class="hint"><i class="far fa-lightbulb"></i> 該当の居住地がない場合は、自己紹介に書きましょう！</div>
  </div>

  <div class="field">
    <%= form.label :introduction %>
    <%= form.text_area :introduction, :placeholder => "ゴルフに関する感想、目標等（1000文字以内）" %>
  </div>

  <div class="actions">
    <%= form.submit class:"btntextchange" %>
  </div>
<% end %>
