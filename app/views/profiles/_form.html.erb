<%= form_with(model: profile, local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :icon %>
    <%= form.file_field :icon %>
  </div>

  <div class="field">
    <%= form.label :gender %>
    <%= form.collection_radio_buttons :gender, Profile.genders,:first, :first %>
  </div>

  <div class="field">
    <%= form.label :birthday %>
    <%= form.date_select :birthday, { include_blank: '----------', start_year: 1921, end_year: 2021} %>
  </div>

  <div class="field">
    <%= form.label :residence %>
    <%= form.select :residence, Profile.residence.keys, {} %>
  </div>

  <div class="field">
    <%= form.label :introduction %>
    <%= form.text_area :introduction %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>