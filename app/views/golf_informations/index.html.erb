<h1>Golf_Informations</h1>

<%= search_form_for @q do |f| %>
  <%= f.label :golf_history, 'ゴルフ歴で検索' %>
  <%= f.search_field :golf_history_eq %>
<br>
  <%= f.label :average_score, '平均スコアで検索' %>
  <%= f.number_field :average_score_eq %>
  <%= f.submit '検索' %>
<% end %>


<table>
  <thead>
    <tr>
      <th>Golf_History</th>
      <th>Average_Score</th>
      <th>Annual_Round_Times</th>
      <th>Playable_Date</th>
      <th>Pick_Up</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @golf_informations.each do |golf_information| %>
      <tr>
        <td><%= golf_information.golf_history %></td>
        <td><%= golf_information.average_score %></td>
        <td><%= golf_information.annual_round_times %></td>
        <td><%= golf_information.playable_date %></td>
        <td><%= golf_information.pick_up %></td>
        <td><%= golf_information.user %></td>
        <td><%= link_to 'Show', golf_information %></td>
        <td><%= link_to 'Edit', edit_golf_information_path(golf_information) %></td>
        <td><%= link_to 'Destroy', golf_information, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Golf_Information', new_golf_information_path %>