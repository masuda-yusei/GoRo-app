<div class="jumbotron">
  <div class="container">
    <nav class="navbar navbar-light">
      <a class="navbar-brand text-white">GoRo - Golf Round</a>
      <% unless user_signed_in? %>
        <div class="navbar__sign-in-btn">
          <%= link_to new_user_session_path, class: "btn my-2 my-sm-0 bg-light text-top-color" do %>ログイン
          <% end %>
        </div>
        <div class="navbar__gest_sign-in-btn">
          <%= link_to users_guest_sign_in_path, class: "btn my-2 my-sm-0 bg-light text-top-color", method: :post do %>ゲストログイン
          <% end %>
        </div>
        <div class="navbar__gest_admin_sign-in-btn">
          <%= link_to users_guest_admin_sign_in_path, class: "btn my-2 my-sm-0 bg-light text-top-color", method: :post do %>ゲスト管理ログイン
          <% end %>
        </div>
      <% end %>
    </nav>
  </div>

  <div class="top-title">
    <h1 class="text-white text-center">
      ゴルフを楽しみたい人へ
    </h1>
  </div>

  <div class="top-authentication text-center">
    <div class="top-authentication__sign-up-btn m-3">
      <%= link_to "アカウントを作成する", new_user_registration_path, class: "btn text-white" %>
    </div>
  </div>
</div>